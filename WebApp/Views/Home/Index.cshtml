@using System.Data
@model WebApp.Models.HomeViewModel
@{
    ViewData["Title"] = "Home";
}
<style>
    .post-form {
        width: 40vw;
        border: 1px solid lightgray;
        border-radius: 30px;
        resize: none;
        padding: 20px;
    }

    .post-form-container {
        display: flex;
        flex-direction: column;
        border-radius: 40px;
        padding: 30px;
        width: 50vw;
        box-shadow: 5px 5px 20px lightgray;
    }

    .post-form-my-profile {
        width: 40vw;
        height: 55px;
        margin: 2%;
    }

    .post-form-my-profile-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50px;
        background-color: pink;
    }

    #btn-share-post {
        border-radius: 10px;
        background-color: lightyellow;
        width: 15%;
        padding: 3px 0;
        color: deeppink;
        font-weight: 500;
        border: none;
        margin: 10px 0;
    }

    file-upload {
        margin: 5px;
    }

    .dashboard {
        display: flex;
        align-items: center;
        flex-direction: column;
    }

    .post-item {
        border-radius: 40px;
        padding: 30px;
        width: 50vw;
        margin: 30px;
        box-shadow: 5px 5px 20px lightgray;
    }

    .post-item p {
        text-align: right;
    }

    .btn-like-post {
        border: none;
        background-color: transparent;
        font-size: 20px;
        font-weight: 200;
        color: white;
        -webkit-text-stroke: 2px black;
    }

    .btn-like-post:hover {
        border: none;
        background-color: transparent;
        font-size: 20px;
        font-weight: 200;
        color: pink;
        -webkit-text-stroke: 2px deeppink;
    }

    .btn-comment-post {
        border: none;
        background-color: transparent;
        font-size: 15px;
    }


</style>

<div class="dashboard">
    <div class="post-form-container">
        <div class="">
            <h3>Opublikuj post</h3>
        </div>
        <div class="post-form-my-profile">
            <div class="post-form-my-profile-avatar"></div>
        </div>
        <textarea class="post-form" rows="10"></textarea>
        <label for="file-upload" class="custom-file-upload">
            Załączniki
        </label>
        <input class="file-upload" type="file" />
        <button id="btn-share-post">Wyślij</button>
    </div>

    @*foreach (var post in Model.OrderByDescending(x => x.writingDate.Month).Select(x => x.writingDate))*@

    @foreach (var post in Model.Posts)
    {
<div class="post-item">
    <div>
        <p>@post.CreatedDateTime.Day.@post.CreatedDateTime.Month.@post.CreatedDateTime.Year </p>
        @post.UserId
        @post.UserName
    </div>
    <div>
        @post.Content
    </div>
    <div>
        @if (post.Images != null)
        {
            @foreach (var photo in post.Images)
            {
                @photo.ToString()
            }
        }
    </div>
    <button class="btn-like-post">♥</button>
    <button class="btn-comment-post">Skomentuj</button>
</div>
    }
</div>

